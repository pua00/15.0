<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
   <record id="view_hr_hospital_patient_card_tree" model="ir.ui.view">
        <field name="name">hr_hospital.patient_card.tree</field>
        <field name="model">hr_hospital.patient_card</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>

            </tree>
        </field>
    </record>

    <record id="view_hr_hospital_patient_card_form" model="ir.ui.view">
        <field name="name">hr_hospital.patient_card.form</field>
        <field name="model">hr_hospital.patient_card</field>
        <field name="arch" type="xml">
            <form>
                <header></header>
                <sheet>
                    <group>
                        <field name="name"/>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_patient_card_action" model="ir.actions.act_window">
        <field name="name">Patient card</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr_hospital.patient_card</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hr_hospital_patient_card_menu"
              action="hr_hospital_patient_card_action"
              parent="hr_hospital_patients_catalog_menu"
              name="Patient card"
              sequence="400"/>
    
</odoo>


